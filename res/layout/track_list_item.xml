<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dip"
    android:gravity="center_vertical"
    android:background="#fafafa">

        <!-- icon is used for albumart, the grabber in edit playlist mode, and
        the playlist icon in the list of playlists -->
    <RelativeLayout  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconLayout"
        android:paddingLeft="8dip"
         >
        <ImageView android:id="@+id/icon"
            android:layout_width="48dip"
            android:layout_height="48dip" />
    </RelativeLayout>

    <!-- The height is set to half the height of the parent, which is 64 dip -->
    <RelativeLayout android:layout_height="48dip"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iconLayout"
        android:paddingLeft="8dip" >
        <TextView android:id="@+id/line1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:paddingTop="4dip"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:maxLength="22"
            android:textColor="#000000"
            android:ellipsize="marquee"
            android:singleLine="true" />

        <!-- The height is set to half the height of the parent, which is 64 dip -->
        <TextView android:id="@+id/line2" android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:alpha="0.54"
            android:scrollHorizontally="true"
            android:textSize="14sp"
            android:layout_below="@id/line1"
            android:maxLength="25"
            android:layout_alignWithParentIfMissing="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout android:layout_width="72dip"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" >
        <ImageView android:id="@+id/animView"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/play_indicator"
            android:layout_gravity="center_vertical"
            android:background="#000000"/>
        <ImageView android:id="@+id/play_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_menu_moreoverflow_normal_holo_light" />
    </RelativeLayout>
</RelativeLayout>
